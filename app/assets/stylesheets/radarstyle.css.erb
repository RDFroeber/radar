   position: absolute;
   width: 200px;
   height: 50px;
   top: -12px;
   left: 15px;
   text-indent: -9999px;
   background: url(<%= asset_path 'radar-logo.png' %>) no-repeat;
   z-index: 9999;
}
/* Navigation */
nav {
   font-family: "News_706", "Times New Roman", Times, serif;
   color: #666666;
   font-size: 1.1em;
}
nav ul.dropdown, nav ul.dropdown li, nav ul.dropdown ul {
   margin: 0;
   padding: 0;
}
nav ul.dropdown {
   float: right;
   position: relative;
   list-style: none;
   padding: 20px;
}
nav ul.dropdown li {
   float: left;
   vertical-align: middle;
   zoom: 1;
}
nav ul.dropdown ul {
   display: none;
   position: absolute;
   float: left;
   width: 220px;
   margin: 14px 0 0 0;
   top: 100%;
   left: 0;
   border: 1px solid #e2e2e2;
   border-top: 0;
   -moz-box-shadow: 0 4px 2px -2px #e2e2e2;
   -webkit-box-shadow: 0 4px 2px -2px #e2e2e2;
   box-shadow: 0 4px 2px -2px #e2e2e2;
}
nav ul.dropdown li {
   display: block;
}
nav ul.dropdown li:hover {
   position: relative;
}
nav ul.dropdown li:hover > ul {
   display: block;
}
nav ul.dropdown ul li {
   float: none;
   position: relative;
}
nav ul.dropdown ul ul {
   top: 0;
   left: 100%;
}
/* Main Nav Links */
nav ul.dropdown li a:link {
   color: #666666;
   padding: 25px 25px 14px 25px;
   text-decoration: none;
}
nav ul.dropdown li a:visited {
   color: #666666;
}
nav ul.dropdown li:hover > a {
   color: #f03;
   padding: 25px 25px 14px 25px;
   background-color: #fff;
   border-left: 1px solid #e2e2e2;
}
nav ul.dropdown li:active > a  {
   color: #f03;
}
/* Nav Dropdown Links */
nav ul.dropdown ul li a:link {
   display: block;
   background-color: #fff;
   color: #222;
   font-size: 16px;
   padding: 15px;
   text-decoration: none;
}
nav ul.dropdown ul li a:visited {
   color: #222;
}
nav ul.dropdown ul li a:hover {
   color: #fff;
   padding: 15px;
   background-color: #f03;
}
nav ul.dropdown ul li a:active {
   color: #fff;
   background-color: #f03;
}
