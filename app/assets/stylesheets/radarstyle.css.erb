/* CSS Styling for Radar */
header {
   position: absolute;
   width: 100%;
   height: 55px;
   top: 0;
   left: 0;
   right: 0;
   background-color: #000;
   font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
   font-size: 100%;
   z-index: 9999;
}
header h1 {
   position: absolute;
   width: 200px;
   height: 50px;
   top: -15px;
   left: 10px;
   text-indent: -9999px;
   background: url(<%= asset_path 'radar_logo.png' %>) no-repeat;
}
/* Navigation */
nav {
   font-family: "Times New Roman", Times, serif;
   color: #fff;
   font-size: 1.1em;
}
nav ul {
   list-style: none;
   float: right;
   padding-right: 20px;
}
nav ul li {
   display: inline;
}
nav ul.dropdown {
   display: none;
   position: relative;
   float: left;
   top: 37px;
   left: 358px;
   padding: 0;
   border-right: 1px solid #ccc;
   border-left: 1px solid #ccc;
   border-bottom: 1px solid #ccc;
}
nav ul.dropdown li {
   display: block;
}
/* Main Nav Links */
nav ul li a:link {
   color: #fff;
   padding: 25px;
   text-decoration: none;
}
nav ul li a:visited {
   color: #fff;
}
nav ul li a:hover {
   color: #f03;
   padding: 25px;
   background-color: #fff;
}
nav ul li a:active {
   color: #f03;
}
/* Nav Dropdown Links */
nav ul.dropdown li a:link {
   display: block;
   color: #000;
   padding: 15px;
   text-decoration: none;
}
nav ul.dropdown li a:visited {
   color: #000;
}
nav ul.dropdown li a:hover {
   color: #fff;
   padding: 15px;
   background-color: #f03;
}
nav ul.dropdown li a:active {
   color: #fff;
   background-color: #f03;
}

/* Main content <div> in layout */
div#content {
   position: relative;
   top: 55px;
   padding: 10px;
   font-size: 100%;
}
/* Form Styles */
form {
   margin: 0 auto;
   width: 400px;

}
label:after {
   content:"\a";
   white-space: pre;
}
input[type="submit"]{
   float: right;
   margin: 20px;
   padding: 20px;
}
/* User Profile Pages */
div.column-50 {
   width: 50%;
   float: left;
}
div.student {
   margin: 0 auto;
   width: 100%;
   padding: 20px;
}
div.student h2 { 
}
div.student img {
   width: 200px;
   height: 200px;
   border-radius: 50%;
}
div.student img + p {
   margin-left: 73px; 
}
div.employer {

}
p.summary-text {
   margin-right: 20px; 
   clear: both;
}
p.edit_button {
   float: right;
   margin-right: 40px;
   padding: 5px 10px;
   background-color: #ff6684;
   border-radius: 10px;
}
p.edit_button a:link {
   text-decoration: none;
