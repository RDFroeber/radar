/* CSS Styling for Radar */
header {
   position: absolute;
   width: 100%;
   height: 55px;
   top: 0;
   left: 0;
   right: 0;
   background-color: #000;
   font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
   font-size: 100%;
   z-index: 9999;
}
header h1 {
   position: absolute;
   width: 200px;
   height: 50px;
   top: -15px;
   left: 10px;
   text-indent: -9999px;
   background: url(<%= asset_path 'radar_logo.png' %>) no-repeat;
}
/* Navigation */
nav {
   font-family: "Times New Roman", Times, serif;
   color: #fff;
   font-size: 1.1em;
}
nav ul.dropdown, nav ul.dropdown li, nav ul.dropdown ul {
   margin: 0;
   padding: 0;
}
nav ul.dropdown {
   float: right;
   position: relative;
   list-style: none;
   padding: 20px;
}
nav ul.dropdown li {
   float: left;
   vertical-align: middle;
   zoom: 1;
}
nav ul.dropdown ul {
   display: none;
   position: absolute;
   float: left;
   width: 220px;
   margin: 14px 0 0 0;
   top: 100%;
   left: 0;
   border: 1px solid #ccc;
   border-top: 0;
   -moz-box-shadow: 0 4px 2px -2px #888;
   -webkit-box-shadow: 0 4px 2px -2px #888;
   box-shadow: 0 4px 2px -2px #888;
}
nav ul.dropdown li {
   display: block;
}
nav ul.dropdown li:hover {
   position: relative;
}
nav ul.dropdown li:hover > ul {
   display: block;
}
nav ul.dropdown ul li {
   float: none;
   position: relative;
}
nav ul.dropdown ul ul {
   top: 0;
   left: 100%;
}
/* Main Nav Links */
nav ul.dropdown li a:link {
   color: #fff;
   padding: 25px;
   text-decoration: none;
}
nav ul.dropdown li a:visited {
   color: #fff;
}
nav ul.dropdown li:hover > a {
   color: #f03;
   padding: 25px;
   background-color: #fff;
}
nav ul.dropdown li:active > a  {
   color: #f03;
}
/* Nav Dropdown Links */
nav ul.dropdown ul li a:link {
   display: block;
   color: #000;
   padding: 15px;
   text-decoration: none;
}
nav ul.dropdown ul li a:visited {
   color: #000;
}
nav ul.dropdown ul li a:hover{
   color: #fff;
   padding: 15px;
   background-color: #f03;
}
nav ul.dropdown ul li a:active {
   color: #fff;
   background-color: #f03;
}
/* Navigation CSS Sprites */
nav li a.prof:before {
   background-image: url(<%= asset_path 'profile.png' %>);
}
nav li a.prof:before {
   background-position: 0px 0px;
}
nav li a.prof:hover {
   background-position: 0px -32px;
}
