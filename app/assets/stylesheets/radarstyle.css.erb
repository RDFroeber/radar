header {
   position: absolute;
   width: 100%;
   height: 55px;
   top: 0;
   left: 0;
   right: 0;
   background-color: #000;
   font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
   font-size: 100%;
   z-index: 9999;
}
header h1 {
   position: absolute;
   width: 200px;
   height: 50px;
   top: -15px;
   left: 10px;
   text-indent: -9999px;
   background: url(<%= asset_path 'radar_logo.png' %>) no-repeat;
}
nav {
   font-family: "Times New Roman", Times, serif;
   color: #fff;
   font-size: 1.1em;
}
nav ul {
   list-style: none;
   float: right;
   padding-right: 20px;
}
nav ul li {
   display: inline;
}
nav ul li a:link {
   color: #fff;
   padding: 25px;
   text-decoration: none;
}
nav ul li a:visited {
   color: #fff;
}
nav ul li a:hover {
   color: #f06;
   padding: 25px;
   background-color: #fff;
}
nav ul li a:active {
   color: #f06;
}
div#content {
   position: relative;
   top: 55px;
   padding: 10px;
   font-size: 100%;
}
form {
   margin: 0 auto;
   width: 500px;

}
label:after, input:after {
   content:"\a";
   white-space: pre;
}
input[type="submit"]{
   padding: 20px;
}