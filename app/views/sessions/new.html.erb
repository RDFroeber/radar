<div class = "login">
  <h3 class = "hire"> Hire. Get Hired.</h3>
  <hr />
  <h2>Login to Your Account</h2>

<%= form_tag session_path, :method => :post do %>
  <%= text_field_tag :email, nil, :placeholder => "Email" %>

  <%= password_field_tag :password, nil, :placeholder => "Password" %>

  <%= submit_tag "Login" %>
<% end %>
</div>
