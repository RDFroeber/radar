<h1>Create a username!</h1>

<% unless @user.errors.none? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :type %>
  <%= f.select :type, ["Student","Employer"] %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <% if logged_in? %> 

  <% end %> 

  <%= f.submit logged_in? ? 'Update' : 'Sign Up' %>
<% end %>