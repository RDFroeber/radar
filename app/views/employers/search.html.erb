<h2>Search for an Employer Post:</h2> 

<%= render 'form_search' %> 

<% if !@selected_posts.nil? %>
   <h3>POST Results:</h3>
   <% @selected_posts.each do |post| %>
      <% if post.for_hire == false %> 
         <div class="post">
            <h3><%= post.user.name %></h3>
            <p>Hiring: <%= post.position_type %></p>
            <p><%= post.created_at.strftime("%b. %d %Y") %></p>
            <p>Description:<br />
            <%= post.description %></p>
         </div>  
      <% end %>  
   <% end %> 
<% end %>
