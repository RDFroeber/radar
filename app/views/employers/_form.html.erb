<% unless current_user.errors.none? %>
  <% current_user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @employer, html: {multipart: true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <% attributes = ["city", "state", "phone", "summary", "company_url", ] %>
  <% attributes.each do |attr| %>
    <%= f.label attr.to_sym %>
    <%= f.text_field attr.to_sym %>
  <% end %>

  <%= f.label :company_type %>
  <%= f.text_field :company_type %>
  
  <%= f.label :photo %>
  <%= f.file_field :photo %>

  <%= f.label :company_size %>
  <%= f.select :company_size, ["myself only","2-10","11-50","51-200","201-500","501-1000","1000+"] %>

  <%= f.label :apprentice_partner %> 
  <%= f.check_box :apprentice_partner %> 

  <%= f.submit logged_in? ? 'Update' : 'Sign Up' %>
<% end %>