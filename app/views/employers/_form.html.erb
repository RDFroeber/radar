<% unless current_user.errors.none? %>
  <% current_user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @employer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <% array = ["city", "state", "phone", "summary", "company_url"] %>
  <% array.each do |attr| %>
    <%= f.label attr.to_sym %>
    <%= f.text_field attr.to_sym %>
  <% end %>

  <%= f.label :apprentice_partner %> 
  <%= f.check_box :apprentice_partner %> 

  <%= f.submit logged_in? ? 'Update' : 'Sign Up' %>
<% end %>