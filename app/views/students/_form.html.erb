<% unless current_user.errors.none? %>
  <% current_user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :photo %>
  <%= form_for @student, :url => student_path, :html => { :multipart => true } do |form| %>
    <%= form.file_field :photo %>
  <% end %>

  <% array = ["city", "state", "phone", "summary", "portfolio_url", "github_url"] %>
  <% array.each do |attr| %>
    <%= f.label attr.to_sym %>
    <%= f.text_field attr.to_sym %>
  <% end %>

  <%= f.label :resume %>
  <%= form_for @student, :url => student_path, :html => { :multipart => true } do |form| %>
    <%= form.file_field :resume %>
  <% end %>
  
  <%= f.submit logged_in? ? 'Update' : 'Sign Up' %>
<% end %>