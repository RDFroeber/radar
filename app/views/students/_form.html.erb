<% unless current_user.errors.none? %>
  <% current_user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @student, html: {multipart: true} do |f| %>
 <% #TODO take this info out of profile update, only show in 'edit account' %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :email %>
  <%= f.email_field :email %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br />

  <hr />

  <% user_inputs = ["city", "state", "phone", "portfolio_url", "github_url"] %>
  <% user_inputs.each do |attr| %>
    <%= f.label attr.to_sym %>
    <%= f.text_field attr.to_sym %><br />
  <% end %>

  <%= f.label :summary %>
  <%= f.text_area :summary, {cols: 50, rows: 10} %><br />

  <div class="column-50">
    <%= f.label :resume %>
    <%= f.file_field :resume %><br />
  </div>

  <div class="column-50">
    <%= f.label :photo %>
    <%= f.file_field :photo %><br />
  </div>
  
  <%= f.submit logged_in? ? 'Update' : 'Sign Up' %>
<% end %>