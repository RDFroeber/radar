<% unless current_user.errors.none? %>
  <% current_user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @student, html: {multipart: true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <% array = ["city", "state", "phone", "summary", "portfolio_url", "github_url"] %>
  <% array.each do |attr| %>
    <%= f.label attr.to_sym %>
    <%= f.text_field attr.to_sym %>
  <% end %>

  <%= f.label :resume %>
  <%= f.file_field :resume %>

  <%= f.label :photo %>
  <%= f.file_field :photo %>
  
  <%= f.submit logged_in? ? 'Update' : 'Sign Up' %>
<% end %>