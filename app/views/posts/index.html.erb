<h2>This is a search form for all posts</h2> 
<%= javascript_include_tag "radar_posts" %>

<%= render 'search_form' %> 

<% @posts.each do |post| %> 
  <div class="post">
    <div class ="browse_posts">
      <p><span> <%= current_user.name %> </span> IS </p>

      <p>A <div class="yellow"><span><%= post.position_type %> </span></div></p>

      <p> <%= student? ? "WITH EXPERIENCE IN" : "FOR HELP W/" %>: <div class="yellow"><span><%= post.description %></span></div></p>

      <p> SAY HI! <div class="yellow"><span><%= current_user.city + ", " + current_user.state unless current_user.city.nil? || current_user.city == "" %></span></div></p>

      <p><span><div class="yellow"><%= post.created_at %></span></div></p>
    </div> 
    <div class="tags" data-tags="<%= post.skill_tag_list.join(" ") %>">
        <p>Tags:<%= post.skill_tag_list %></p> 
    </div> 
  </div> 
<% end %> 

