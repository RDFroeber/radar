<h1>Create a <%= current_user.type == "Student" ? "Hire Me" : "We're Hiring" %> post!</h1>

<% path = current_user.type == "Student" ? student_posts_path : employer_posts_path %>

<%= form_for @post, url: path, html: {method: "post"} do |f| %>
  <%=f.hidden_field :user_id, value: current_user.id %>
  <%=f.hidden_field :for_hire, value: true %>  

  <%= f.label :description %>
  <%= f.text_area(:description, size: '50x10') %>

  <%= f.label :position_type %>
  <%= f.select :position_type, ["Product Manager","Entrepreneur","Digital Marketer", "Founder/Co-Founder", "UX Designer", "Product Designer", "Full-Stack Developer", "Back-end Developer", "Front-end Developer"] %>

  <%= f.submit 'Submit post!' %>
<% end %> 